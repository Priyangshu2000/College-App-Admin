<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:layout_margin="5dp"
    style="@style/Widget.Material3.CardView.Outlined"
    android:outlineAmbientShadowColor="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_baseline_person_24"
    android:id="@+id/delete_notice_userPic"
    app:civ_circle_background_color="@color/teal_200"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin of the college"
        android:id="@+id/delete_notice_heading"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:layout_weight="2"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_weight="0.5"
            android:id="@+id/delete_notice_deleteButton"
            android:textSize="15sp"
            android:textColor="@color/teal_700"
            app:rippleColor="@color/teal_200"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:textStyle="bold"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_notice_body"
        android:text="Here is the dummy text for the notice loremipsum lorem ipsum"
        android:textSize="17sp"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:layout_marginBottom="6dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete_notice_notice_pic"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"/>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>